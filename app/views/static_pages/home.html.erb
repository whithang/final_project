  .wind{
    width: 100% !important;
  }
  .search{
    width: 95% !important;
  }
  .country {
    width: 100% !important;
    height: 150px !important;
    margin-bottom: 10px;
    
  }
 
  .sizexs{
    padding: 0px 10px !important;
  }
  .content{
    width: 98%!important;
    margin: auto !important;
  }
  .countrylabel {   
    top: 0% !important;
    left: 10% !important;
    font-size: 28px !important;
  }
}


.hdr{
  top:-100px;
  box-shadow: 1px 1px 12px;
}
.bgimg{
  background: url(<%= asset_path('background.png') %>) no-repeat 0 100%;
  background-size: cover;
  padding: 100px 0;
}
.search{
  width: 70%;
  float: none;
  margin: auto;
}
.content{
  background: rgba(0, 0, 0, 0.6);
  padding: 40px 0 40px 0;
  border-radius: 10px;
  width: 100%;

}
.wind{
  margin:auto;
  width:60%;
}
.country{
  width: 100%;
  margin-bottom: 25px;
}
.countrylabel{
  color: white;
  background: transparent;
  position: absolute;
  top: 40%;
  left: 10%;
  z-index: 9999;
}
</style>
<%= render 'layouts/footer' %>